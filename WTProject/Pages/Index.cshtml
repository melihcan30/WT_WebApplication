@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">İlk ASP.NET Core Uygulamamız</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetStudentInfos)
        {
        <tr>
            <td><img src=@item.ImgURL class="figure-img" /></td>
            <td>@item.No</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Age</td>
        </tr>
        }
    <tbody>
</table>
